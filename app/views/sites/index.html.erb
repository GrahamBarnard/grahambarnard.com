<h2 class="header-title">Sites And Projects</h2>
<div class="row-fluid">
  <% @websites.each_with_index do |website, index| %>
    <% unless website.webimages.empty? %>
      <% if index % 3 == 0 and index != 0 %>
        </div> 
        <div class="row-fluid">
      <% end %>
      <div class="span6">
        <article>
          <% website.webimages.order(:imageorder).each_with_index do |webimage, webindex| %>
            <% if webindex == 0 %>
              <%= link_to(image_tag(webimage.url), "/sites/" + website.id.to_s, :class => "fancybox", :rel => website.name.gsub(/[^0-9a-z]/i, '')) %>
            <% else %>
              <%= link_to(webimage, "/sites/" + website.id.to_s, :class => "fancybox hidden", :rel => website.name.gsub(/[^0-9a-z]/i, '')) %>
            <% end %>
          <% end %>
        </article>
      </div>
    <% end %>
  <% end %>
</div>
  

