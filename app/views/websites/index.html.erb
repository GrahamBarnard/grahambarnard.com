<h1>Websites</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Url</th>
    <th>Description</th>
    <th>Short Description</th>
    <th>Published</th>
    <th>Image Url</th>
    <th>Preview Image Url</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @websites.each do |website| %>
  <tr>
    <td><%= website.name %></td>
    <td><%= website.url %></td>
    <td><%= website.description %></td>
    <td><%= website.shortdescription %></td>
    <td><%= website.published %></td>
    <td><%= website.imageurl %></td>
    <td><%= website.previewimageurl %></td>
    <td><%= link_to 'Show', website %></td>
    <td><%= link_to 'Edit', edit_website_path(website) %></td>
    <td><%= link_to 'Destroy', website, confirm: 'Are you sure?', method: :delete %></td>
    
  </tr>
<% end %>
</table>
<%= link_to 'New Site Entry', new_website_path %>

